
@{
    ViewBag.Title = "Edit";
}


<h2>修改老师信息</h2>
<form action="/Teacher/Edit" method="post">
    <div class="row">
        <div class="col-lg-12">
            @Html.Hidden("TeacherID")
            @Html.TextBox("TeacherName", null, new { placeholder = "请输入姓名", @class = "form-control" }) 
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.TextBox("TeacherLoginName", null, new { placeholder = "请输入账号", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.TextBox("TeacherLoginPwd", null, new {type="password", placeholder = "请输入密码", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.TextBox("TeacherPhone", null, new { placeholder = "请输入电话", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.TextBox("TeacherEmail", null, new { placeholder = "请输入邮箱地址", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <input type="submit" class="btn btn-primary form-control" value="提交" />
        </div>
    </div>
</form>

