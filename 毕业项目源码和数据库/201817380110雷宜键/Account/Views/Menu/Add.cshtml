
@{
    ViewBag.Title = "Add";
}

<h2></h2>
<ul class="breadcrumb">
    <li><a href="#">首页</a></li>
    <li><a href="#">菜单管理</a></li>
    <li class="active">菜单添加</li>
</ul>
@using (Html.BeginForm("Add", "Menu", FormMethod.Post, new { @class = "form-group", id = "form1", name = "form1" }))
{

    <div class="form-group">
        <label for="Name" class="control-label">名称：</label>
        <input type="text" name="Name" id="Name" class="form-control" />

    </div>
    <div class="form-group">
        <label for="Url" class="control-label">地址：</label>
        <input type="text" name="Url" id="Url" class="form-control" />

    </div>
    <div class="form-group">
        <label for="Remark" class="control-label">备注：</label>
        <input type="text" name="Remark" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Pid" class="control-label">Pid(上级菜单ID)：</label>
        <input type="text" name="Pid" id="Pid" class="form-control" />

    </div>
    <div class="form-group">
        <a href="javascript:history.go(-1)">返回</a>
        <input type="submit" class="btn btn-primary" value="添加" />
    </div>
}
