
@{
    ViewBag.Title = "Edit";
}
@using Account.Models
@model Departments
<ul class="breadcrumb">
    <li><a href="#">首页</a></li>
    <li><a href="#">部门列表</a></li>
    <li class="active">修改部门</li>
</ul>
@using (Html.BeginForm("Edit", "Departments", FormMethod.Post, new { @class = "form-group", id = "form1", name = "form1" }))
{

    <div class="form-group">
        <label for="Name" class="control-label">部门名称：</label>
        <input type="text" name="Name" id="Name" value="@Model.Name" class="form-control" />

    </div>
    <div class="form-group">
        <label for="Remark" class="control-label">备注：</label>
        <input type="text" name="Remark" value="@Model.Remark" class="form-control" />
    </div>
    <div class="form-group">
        <a href="javascript:history.go(-1)">返回</a>
        <input type="submit" class="btn btn-primary" value="保存" />
    </div>
}

