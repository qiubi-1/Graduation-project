
@{
    ViewBag.Title = "Index";
}
@using Account.Models;
@model List<Departments>
<ul class="breadcrumb">
    <li><a href="#">首页</a></li>
    <li class="active">部门列表</li>
</ul>
<h2>部门列表</h2>
<table class="table table-bordered table-hover table-condensed table-striped">
    <tr>
        <th>编号</th>
        <th>名称</th>
        <th>备注</th>
        <th>部门人员</th>
        <th>人员数量</th>
        <th>修改</th>
        <th>删除</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Remark</td>
            <td>
                @foreach (var item1 in item.UserInfos)
                {
                    @item1.Name
                    <br />
                }
            </td>
            <td>@item.UserInfos.Count()</td>
            <td><a href="/Departments/Edit/@item.ID" class="btn btn-default">修改</a></td>
            <td><a href="/Departments/Delete/@item.ID" class="btn btn-danger" onclick="return confirm('你确认要删除这个部门吗？')">删除</a></td>            
        </tr>
    }

</table>
